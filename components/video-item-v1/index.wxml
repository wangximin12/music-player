<!--components/video-item-v1/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="big">
    <view class="album">
      <image class="image" src="{{item.cover}}"></image>
      <view class="info">
        <view class="count">
        {{format.formatCount(item.playCount)}}
        </view>
        <view class="duration">
        {{format.formatDuration(item.mv.videos[0].duration)}}</view>
      </view>
    </view>
    <view class="content">
      {{item.name}}-{{item.artistName}}
    </view>
  </view>