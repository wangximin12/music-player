.top {
	position: relative;
}

.top .image {
	width: 220rpx;
	border-radius: 10px;
}

.top .play-count {
	position:absolute;
	right: 0;
	font-size: 24rpx;
	bottom: 10rpx;
	color: #fafafa;
	background-color: rgba(0, 0, 0, .5);
	border-radius: 20rpx;
	padding: 6rpx;
}
.bottom {
	width: 220rpx;
	height: 76rpx;
	font-size: 28rpx;
	font-weight: 400;
	white-space: normal;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical
}