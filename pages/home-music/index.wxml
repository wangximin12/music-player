<!-- 搜索框 -->
<van-search 
	disabled
	background="#fafafa"
	shape="round"
	placeholder='搜索您喜欢的歌曲'
	bind:click-input="handleSearchClick"
/>

<!-- 轮播图 -->
<swiper class="swiper"
        indicator-dots
        autoplay
        interval="3000"
        duration="700"
        easing-function="easeInOutCubic"
        circular
        style="height: {{swiperHeight}}px;">
  <block  wx:for="{{banners}}" wx:key="bannerId">
    <swiper-item class="swiper-item"> 
      <image src="{{item.pic}}" 
      class="image"
      mode="widthFix"
      bindload="ImageLoaded"></image> 
    </swiper-item>
  </block>
</swiper>

<!-- 推荐歌曲 -->
<view class="recommend-song">
  <area-header title="推荐歌曲"
               bind:click="handleMoreClick">
  </area-header>
  <view class="song-list"  wx:if="{{recommendSongs.length > 0}}">
    <block wx:for="{{recommendSongs}}" wx:key="id">
      <song-item-v1 item = "{{item}}" bindtap="handleSongItemClick" data-index="{{index}}"></song-item-v1>
    </block>
  </view>
</view>

<!-- 热门歌单 -->
<song-menu-area title="热门歌单"
                songMenu="{{songMenus}}"
                wx:if="{{songMenus.length > 0 }}">
</song-menu-area>

<!-- 推荐歌单 -->
<song-menu-area title="推荐歌单"
                songMenu="{{recommendSongMenu}}"
                wx:if="{{recommendSongMenu.length > 0 }}">
</song-menu-area>

<!-- 巅峰榜 -->
<view class="ranking">
  <area-header title="巅峰榜" showRight="{{false}}"></area-header>
  <view class="ranking-list">
    <block wx:for="{{rankings}}"
           wx:key="index">
      <ranking-area-item item="{{item}}"
      bindtap="handeleRankingItemClick"
      data-idx="{{index}}"
      ></ranking-area-item>
    </block>
  </view>
</view>

<!-- 播放工具栏 -->
<view class="play-bar-placeholder" wx:if="{{currentSong.id}}"></view>
<view class="play-bar" wx:if="{{currentSong.id}}"
bindtap="handlePlayBarClick">
  <view class="left">
    <image src="{{currentSong.al.picUrl}}" mode="aspectFill" class="album album-anim" style="animation-play-state:{{playAnimState}};"></image>
    <view class="name">
      {{currentSong.name}}
    </view>
  </view>
  <view class="right">
    <image class="icon play" src="/assets/images/play-bar/play_{{isPlaying ? 'pause' : 'resume'}}.png"
    catchtap="handlePlayBtnClick"></image>
    <image class="icon playList" src="/assets/images/play-bar/play_music.png"></image>
  </view>
</view>
